<div class="col-md-3 panel panel-default">
  <div class="panel-body">
    <a class="btn btn-primary btn-block">
      <span class="glyphicon glyphicon-save"></span> Download the full dataset
    </a>
    <h2>Compare</h2>
    <div>
      <a class="btn btn-link" href="/series/<%= @series.slug %>/releases/<%= @release.slug %>/datasets/<%= @dataset.slug %>/slice?product=<%= @observation.product %>">
        <span class="glyphicon glyphicon-stats"></span> Change over time
      </a>
    </div>
    <div>
      <a class="btn btn-link" href="">
        <span class="glyphicon glyphicon-stats"></span> Other products
      </a>
    </div>
    <h2>Explore</h2>
    <div class="dropdown">
      <button class="btn btn-link dropdown-toggle" data-toggle="dropdown"><span class="caret"></span> Other time periods</button>
      <ul class="dropdown-menu">
        <% if @related[:previous][:month] %>
          <li><a href="<%= @related[:previous][:month].url %>"><%= @related[:previous][:month].date %></a></li>
        <% end %>
      </ul>
    </div>
    <div class="dropdown">
      <button class="btn btn-link dropdown-toggle" data-toggle="dropdown"><span class="caret"></span> Other products</button>
      <ul class="dropdown-menu">
        <% @dataset.dimensions.attributes["product"].values.sample(10).each do |product| %>
          <li>
            <a href="/series/<%= @series.slug %>/releases/<%= @release.slug %>/datasets/<%= @dataset.slug %>/observations?product=<%= product.notation %>&date=<%=@observation.date%>">
              <%= product.title %>
            </a>
          </li>
        <% end %>
      </ul>
    </div>
    <h2>Subscribe</h2>
    <div>
      <a class="btn btn-link" href="obs-mc6a.html">
        <span class="glyphicon glyphicon-bookmark"></span> Latest figure
      </a>
    </div>
    <div>
      <a class="btn btn-link" href="#">
        <span class="glyphicon glyphicon-envelope"></span> Email
      </a>
    </div>
    <hr>
    <p class="text-center">
      <a class="btn btn-link btn-sm" href="<%= ENV["DATA_API_URL"] + request.fullpath + '.json' %>">JSON</a>
      <a class="btn btn-link btn-sm" href="obs-mc6a-2013dec.xml">XML</a>
      <a class="btn btn-link btn-sm" href="obs-mc6a-2013dec.rdf">RDF</a>
    </p>
  </div>
</div>
